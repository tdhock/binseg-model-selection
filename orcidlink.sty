\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{orcidlink}[2020/05/27 Links to ORCIDs in LaTeX documents]

\RequirePackage{tikz}
\RequirePackage{xcolor}
\RequirePackage{hyperref}

\definecolor{lime}{HTML}{A6CE39}
\DeclareRobustCommand{\orcidicon}{%
  \raisebox{-1.5pt}{%
  \begin{tikzpicture}
    % draw the lime colored circle for the icon background
    \draw[lime, fill=lime] (0,0) circle [radius=0.16];
    % draw the lowercase I
    \draw[white, line width=0.2mm] (-0.06,-0.078) -- (-0.06,0.062);
    \draw[white, fill=white] (-0.06,0.093) circle [radius=0.006];
    % draw the uppercase D
    \draw[white, line width=0.2mm]
      (-0.01,-0.068) -- (-0.01,0.052) -- (0.035,0.052)
      .. controls +(0:0.035) and +(90:0.035) .. (0.095,-0.008)
      .. controls +(-90:0.035) and +(0:0.035) .. (0.035,-0.068) -- cycle;
  \end{tikzpicture}}%
}

\hypersetup{colorlinks}
\newcommand{\orcid}[1]{\:\href{https://orcid.org/#1}{\orcidicon}}
\newcommand{\orcidnum}[1]{\:\href{https://orcid.org/#1}{\orcidicon\:#1}}
